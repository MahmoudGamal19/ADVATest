@using Domin
@model EmployeeVM

@{
    ViewData["Title"] = "Create Employee";
}
<h2 class="text-center font-weight-bold"> Create Employee </h2>
<div class="row align-items-center justify-content-center">
    <div class="col-lg-12">
        <hr />
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" asp-controller="Employee" method="post">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Name" class="lang control-label"></label>
                            <input asp-for="Name" class="form-control" required maxlength="100" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Salary" class="lang control-label"></label>
                            <input asp-for="Salary" class="form-control" required min="1000" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="DepartmentId" class="lang control-label"></label>
                            <select class="form-control" asp-for="DepartmentId" asp-items="@ViewBag.department">
                                <option value="@null">choose</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6 text-left">
                            <input type="submit" id="global_save" class="btn btn-primary font-weight-bold" value="Create" />
                        </div>
                        <div class="col-6 text-right">
                            <a class="font-weight-semibold font-size-17" asp-action="GetAll">Back to List!</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/_Resuts_Massage.cshtml")